@page

<div class="container align-content-center"  >
    

    <div class="row p-1 message-box" >
        <div class="col-3"></div>
        <div class="col-6">
            <ul id="messagesList"></ul>
        </div>
    </div>
    <div class="row p-1">
        <div class="col-3"></div>
        <div class="col-6">
            <hr />
        </div>
    </div>

    

    <div class="row p-1 chat-input-group">
        <div class="col-3"></div>
        <div class="col-6">
            <input type="text" id="userInput" class="form-control" placeholder="Enter Username"/>
            <div class="input-group">
                <input type="text" class="form-control" id="messageInput" placeholder="Type Message" />
                <input type="button" id="sendButton" class="btn btn-outline-success" value="Send Message" />
            </div>
        </div>
    </div>
</div>
<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>